---
import Layout from "../layouts/Layout.astro";
import Starfield from "../components/Starfield.astro";
import Rocket from "../components/Rocket.astro";
import Shake from "../components/Shake.astro";
import Flicker from "../components/Flicker.astro";
---

<Layout>
  <Starfield />
  <Rocket />
  <main>
    <div
      class="flex flex-col md:flex-row items-center justify-center min-h-screen p-8"
    >
      <div class="text-center p-4">
        <Shake>
          <div class="shake">
            <h1
              class="glitch text-6xl md:text-7xl mb-6 text-center"
              data-text="WELCOME WELCOME"
            >
              WELCOME
            </h1>
            <Flicker>
              <div class="flicker w-full max-w-md text-left">
                <p class="console-text mb-4">&gt; Hi, I'm Philip Aquilina.</p>
                <p class="console-text mb-4">
                  &gt; I'm primarily a backend developer.
                </p>
                <p class="console-text mb-4">
                  &gt; Currently drifting among the stars.
                </p>
                <p class="cursor inline-block">_</p>
              </div>
            </Flicker>
          </div>
        </Shake>
      </div>

      <div
        id="github-container"
        class="mt-8 md:mt-0 md:ml-16 p-4 border-2 border-[#33FF00] rounded-lg bobbing"
      >
        <a
          href="https://github.com/philaqui9"
          target="_blank"
          class="block mt-4"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mx-auto h-8 w-8 fill-current"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 .5c-6.6 0-12 5.4-12 12 0 5.3 3.4 9.8 8.2 11.4.6.1.8-.3.8-.6v-2.3c-3.3.7-4-1.4-4-1.4-.5-1.3-1.2-1.7-1.2-1.7-1-.7.1-.7.1-.7 1.1.1 1.6 1.1 1.6 1.1 1 .1.8 1.4.8 1.4.8 1.3 2.1.9 2.6.7.1-.6.3-1 .6-1.2-2.7-.3-5.5-1.3-5.5-5.9 0-1.3.5-2.4 1.1-3.3-.1-.3-.5-1.6.1-3.3 0 0 .9-.3 3.1 1.1.9-.3 1.8-.4 2.7-.4.9 0 1.8.1 2.7.4 2.2-1.4 3.1-1.1 3.1-1.1.6 1.7.2 3 .1 3.3.7.9 1.1 2 1.1 3.3 0 4.6-2.8 5.6-5.5 5.9.3.3.6.9.6 1.8v2.7c0 .3.2.7.8.6 4.8-1.6 8.2-6.1 8.2-11.4 0-6.6-5.4-12-12-12z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </main>
</Layout>
