---
import Layout from "../layouts/Layout.astro";
import Starfield from "../components/Starfield.astro";
import DrawConstellations from "../components/games/DrawConstellations.astro";
import Rocket from "../components/Rocket.astro";
import Shake from "../components/effects/Shake.astro";
import Flicker from "../components/effects/Flicker.astro";
---

<Starfield />
<DrawConstellations />

<Layout>
  <Starfield />
  <Rocket />

  <!-- Social Links Container fixed to top left in a row -->
  <div class="fixed top-0 left-0 m-4 flex flex-row space-x-4">
    <!-- GitHub Container -->
    <div class="flex flex-col items-center">
      <div
        id="github-container"
        class="w-16 h-16 border-2 border-[#33FF00] rounded-lg flex items-center justify-center bobbing"
      >
        <a href="https://github.com/philaqui9" target="_blank">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8 fill-current"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 .5c-6.6 0-12 5.4-12 12 0 5.3 3.4 9.8 8.2 11.4.6.1.8-.3.8-.6v-2.3c-3.3.7-4-1.4-4-1.4-.5-1.3-1.2-1.7-1.2-1.7-1-.7.1-.7.1-.7 
                1.1.1 1.6 1.1 1.6 1.1 1 .1.8 1.4.8 1.4.8 1.3 2.1.9 2.6.7.1-.6.3-1 .6-1.2-2.7-.3-5.5-1.3-5.5-5.9 
                0-1.3.5-2.4 1.1-3.3-.1-.3-.5-1.6.1-3.3 0 0 .9-.3 3.1 1.1.9-.3 1.8-.4 2.7-.4.9 0 1.8.1 2.7.4 
                2.2-1.4 3.1-1.1 3.1-1.1.6 1.7.2 3 .1 3.3.7.9 1.1 2 1.1 3.3 0 4.6-2.8 5.6-5.5 5.9.3.3.6.9.6 1.8v2.7c0 .3.2.7.8.6 
                4.8-1.6 8.2-6.1 8.2-11.4 0-6.6-5.4-12-12-12z"
            ></path>
          </svg>
        </a>
      </div>
    </div>

    <!-- LinkedIn Container -->
    <div class="flex flex-col items-center">
      <div
        id="linkedin-container"
        class="w-16 h-16 border-2 border-[#33FF00] rounded-lg flex items-center justify-center bobbing"
      >
        <a href="https://www.linkedin.com/in/philipaquilina" target="_blank">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8 fill-current"
            viewBox="0 0 448 512"
          >
            <path
              d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.81 0 54.14 0 24.37 24.09 0 53.79 0c29.64 0 53.79 24.37 53.79 54.14 0 29.67-24.15 54-53.79 54zm394.24 339.9h-92.68V302.4c0-34.7-.7-79.3-48.35-79.3-48.35 0-55.75 37.8-55.75 76.7v148.2h-92.68V148.9h89.04v40.8h1.3c12.4-23.6 42.7-48.35 87.86-48.35 94 0 111.32 61.9 111.32 142.3v164.3z"
            ></path>
          </svg>
        </a>
      </div>
    </div>

    <!-- Resume Container -->
    <div class="flex flex-col items-center">
      <div
        id="resume-container"
        class="w-16 h-16 border-2 border-[#33FF00] rounded-lg flex items-center justify-center bobbing"
      >
        <a href="/resume.pdf" target="_blank">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8 fill-current"
            viewBox="0 0 384 512"
          >
            <path
              d="M224 136V0H24C10.7 0 0 10.7 0 24v464c0 13.3 10.7 24 24 24h336c13.3 0 24-10.7 24-24V160H248c-13.3 0-24-10.7-24-24zm121.9 70.1l-82.1-82.1H288v82.1zM288 464H96V48h112v104c0 13.3 10.7 24 24 24h104v288z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <main>
    <div
      class="flex flex-col md:flex-row items-center justify-center min-h-screen p-8"
    >
      <div class="text-center p-4">
        <Shake>
          <div class="shake">
            <h1
              class="glitch text-6xl md:text-7xl mb-6 text-center"
              data-text="WELCOME WELCOME"
            >
              WELCOME
            </h1>
            <Flicker>
              <div class="flicker w-full max-w-md text-left">
                <p class="console-text mb-4">&gt; Hi, I'm Philip Aquilina.</p>
                <p class="console-text mb-4">
                  &gt; I'm primarily a backend developer.
                </p>
                <p class="console-text mb-4">
                  &gt; Currently drifting among the stars.
                </p>
                <p class="cursor inline-block">_</p>
              </div>
            </Flicker>
          </div>
        </Shake>
      </div>
    </div>
  </main>
</Layout>
